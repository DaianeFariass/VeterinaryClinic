@model IEnumerable<VeterinaryClinic.Data.Entities.PetReport>
@{
    ViewData["Title"] = "IndexPetReport";
}


<!-- Hero Area Start -->
    <div style="height: 210px;" class="slider-area2 slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center pt-50">
                        <h2>Pet Reports</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css" />

<br />


<div class="container">

    <a asp-action="CreatePetReport" class="btn btn-success"><i class="fa fa-save"></i>Add Pet Report</a>

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Pets Report</h3>
            </div>
            <div class="panel-body">
                <table class="table table-hover table-responsive table-striped" id="MyTable">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Pet.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Vet.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TestName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Diagnose)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MedicineName)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.Pet.Name)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.Vet.Name)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.TestName)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.Diagnose)
                                    </td>
                                    <td>
                                    @Html.DisplayFor(modelItem => item.MedicineName)
                                    </td>
                                    <td id="@item.Id">
                                    <a asp-action="EditPetReport" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i>Edit</a>
                                        <a asp-action="DeletePetReport" asp-route-id="@item.Id" class="btn btn-danger"><i class="fas fa-trash"></i>Delete</a>
                                    <a asp-action="Index" id="deleteDialog" class="btn btn-success"><i class="fa fa-chevron-left"></i>Back to List</a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<div id="deleteDialog" class="modal fade">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete</h4>
                <button type="button" class="close" data-dismiss="modal"><i class="fa fa-window-close"></i></button>
            </div>
            <div class="modal-body">
                <p>Do you want to delete this "Pet Report?" </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="btnYesDelete">Yes</button>
                <button type="button" class="btn btn-success" id="btnNoDelete">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
        <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#MyTable').DataTable();
            });
        </script>
}

