@model VeterinaryClinic.Data.Entities.Room

@{
    ViewData["Title"] = "Delete";
}


<div style="height: 210px;" class="slider-area2 slider-height2 d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="hero-cap text-center pt-50">
                    <h2>Delete Room</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<h3 style="margin-left: 10%;">Are you sure you want to delete this Room?</h3>
<br />
<div>
    <dl class="container">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" style="margin-right: 16px; margin-left: 10%;" class="button button-contactForm boxed-btn"><i class="fa fa-trash"></i>Delete</button>
        <a asp-action="Index" class="button button-contactForm boxed-btn"><i class="fa fa-chevron-left"></i>Back to List</a>
    </form>
</div>
