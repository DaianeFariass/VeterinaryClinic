@model IEnumerable<VeterinaryClinic.Data.Entities.Notifications>

@{
    ViewData["Title"] = "Notifications";
}

<h1>Notifications</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Appointment.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationTypes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.Id)
                </td>
             <td>
                    @Html.DisplayFor(modelItem => item.Appointment.Date.Date.ToString())
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Appointment.Time.ToString())
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationTypes.ToString())
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRead.ToString())
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
