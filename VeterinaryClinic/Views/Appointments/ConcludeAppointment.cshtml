@model VeterinaryClinic.Models.BillViewModel
@{
    ViewData["Title"] = "ConcludeAppointment";
}

<!-- Hero Area Start -->
<div style="height: 210px;" class="slider-area2 slider-height2 d-flex align-items-center">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="hero-cap text-center pt-50">
                    <h2>Bill</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<flash dismissable="true" />
<br />
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form asp-action="ConcludeAppointment" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group" style="display: flex; flex-direction: column;">
                <ejs-combobox id="appointment" ejs-for="AppointmentId" dataSource="@ViewBag.Appointments">
                    <e-combobox-fields value="Value" Text="Text"></e-combobox-fields>
                </ejs-combobox>
                <span asp-validation-for="AppointmentId" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
              </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="button button-contactForm boxed-btn" />
                <a asp-action="Index" class="button button-contactForm boxed-btn"><i class="fa fa-chevron-left"></i>Back to List</a>
            </div>

        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


